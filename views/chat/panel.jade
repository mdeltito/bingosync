#chat-widget.col-md-4.col-lg-3
  .panel.panel-primary
    .panel-heading
      span.glyphicon.glyphicon-comment
      | Chat
    .panel-body.collapsed
      ul.chat
      .panel-footer
        .input-group
          input#chat-message.form-control.input-sm(type='text', placeholder='Type your message here...')
          span.input-group-btn
            button#chat-send.btn.btn-warning.btn-sm
              | Send
